{
  "name": "pabc-site-hugo",
  "version": "1.0.0",
  "description": "",
  "main": "postcss.config.js",
  "scripts": {
    "tailwind:watch": "npx tailwindcss -i ./assets/css/input.css -o ./assets/css/custom.css --minify --watch",
    "hugo:server": "hugo server --buildDrafts --disableFastRender --cleanDestinationDir --gc --minify --logLevel info",
    "dev": "concurrently \"npm run tailwind:watch\" \"npm run hugo:server\"",
    "tailwind:build": "npx tailwindcss -i ./assets/css/input.css -o ./assets/css/custom.css --minify",
    "build": "npm run tailwind:build && hugo --gc --minify",
    "clean": "rm -rf public && rm -f assets/css/custom.css"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rCirelli/pabc-site-hugo.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "bugs": {
    "url": "https://github.com/rCirelli/pabc-site-hugo/issues"
  },
  "homepage": "https://github.com/rCirelli/pabc-site-hugo#readme",
  "devDependencies": {
    "@tailwindcss/cli": "^4.1.14",
    "concurrently": "^9.2.1",
    "tailwindcss": "^4.1.14"
  }
}
